<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <resource-ref>
        <description>postgreSQL Datasource</description>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>WebgisServlet</servlet-name>
        <servlet-class>com.servlet.WebgisServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WebgisServlet</servlet-name>
        <url-pattern>/WebgisServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProvinceLoaderServlet</servlet-name>
        <servlet-class>com.servlet.ProvinceLoaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProvinceLoaderServlet</servlet-name>
        <url-pattern>/data/district/province</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LocationSelectorServlet</servlet-name>
        <servlet-class>com.servlet.LocationSelectorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LocationSelectorServlet</servlet-name>
        <url-pattern>/data/district/city</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>PointRequestServlet</servlet-name>
        <servlet-class>com.servlet.PointRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PointRequestServlet</servlet-name>
        <url-pattern>/data/point</url-pattern>
    </servlet-mapping>
    

</web-app>